<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/home_item_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="#00bcffee"
            android:src="@mipmap/default_avatar" />

        <TextView
            android:id="@+id/home_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="12dp"
            android:text="小光"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/home_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_item_name"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="3dp"
            android:text="计算机2班"
            android:textSize="14sp" />
    </RelativeLayout>
    <!--android:layout_above="@+id/home_item_icon"-->


</LinearLayout><!--android:layout_toRightOf="@+id/home_item_icon"-->