<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_item_style">
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/tab_textcolor_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="menu_item">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="menu_item_icon">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="menu_item_label">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#2c2b2b</item>
    </style>
    <style name="menu_title_label">
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#ff5a5a5b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/menu_title_background</item>
    </style>

    <!--查成绩的listview-->
        <style name="normal_listview" parent="android:Widget">
            <item name="android:cacheColorHint">#00000000</item>
            <item name="android:listSelector">@drawable/settings_other_button_background_on</item>
            <item name="android:scrollbars">none</item>
            <item name="android:dividerHeight">@dimen/normal_listview_dividerHeight</item>
            <item name="android:divider">@null</item>
            <item name="android:paddingLeft">@dimen/normal_listview_padding</item>
            <item name="android:paddingRight">@dimen/normal_listview_padding</item>
            <item name="android:paddingTop">@dimen/normal_listview_padding</item>
        </style>
        <style name="normal_item_sub_title" parent="android:Widget">
            <item name="android:textSize">12sp</item>
            <item name="android:textColor">#a09d9d</item>
        </style>
        <style name="expand_button" parent="android:Widget">
            <item name="android:background">@drawable/expand_button_selector</item>
            <item name="android:textOn"></item>
            <item name="android:textOff"></item>
            <item name="android:clickable">true</item>
            <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
            <item name="android:layout_width">23dp</item>
            <item name="android:layout_height">20dp</item>
        </style>

    <style name="listitem_separator" parent="android:Widget">
        <item name="android:background">@mipmap/listitem_separator</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


</resources>
